<div class="container-centered">
    <h1 class="text-center mt-4">Users page</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>ORCID iD</th>
                <th>Email</th>
                <th>Created at:</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.id %> </td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.orcid_id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.created_at %></td>
                    <td><%= link_to "Show", user_path(user.id), class: "btn btn-outline-success btn-sm" %></td>
                    <% if logged_in? %>
                        <% if current_user == user %>
                            <td><%= link_to "Edit", edit_user_registration_path(user.id), method: :edit, class: "btn btn-outline-info btn-sm" %></td>
                            <td><%= link_to "Destroy this user", user, class: "btn btn-outline-danger btn-sm", method: :delete %></td>
                        <% end %>
                    <% end %>
                </tr>
            <% end %>
        </tbody>

    </table>
    <br>
    <%= link_to "Create new user", new_user_registration_path %>

    <p>
    <%= link_to "Home page", root_path %>
    </p>
</div>